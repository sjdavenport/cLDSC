file = {:data/fireback/davenpor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Friston et al. - 1996 - Detecting Activations in PET and fMRI Levels of Inference and Power(2).pdf:pdf},
isbn = {1053-8119 (Print) 1053-8119 (Linking)},
