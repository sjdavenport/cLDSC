file = {:data/fireback/davenpor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Salimi-Khorshidi et al. - 2009 - Meta-analysis of neuroimaging data a comparison of image-based and coordinate-based pooling of studies.pdf:pdf},
journal = {NeuroImage},
