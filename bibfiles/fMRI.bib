doi = {10.1016/j.neuroimage.2016.12.017},
file = {:data/fireback/davenpor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ziegler et al. - 2017 - Multivariate dynamical modelling of structural change during development.pdf:pdf},
issn = {10959572},
journal = {NeuroImage},
keywords = {Ageing,Bayesian inference,Brain maturation,Connectivity,Dynamical systems,Longitudinal analysis,Structural brain mapping},
number = {June 2016},
pages = {746--762},
pmid = {27979788},
publisher = {Elsevier},
title = {{Multivariate dynamical modelling of structural change during development}},
volume = {147},
year = {2017}
}
