@article{Huang2010,
abstract = {Incomplete or missing data is typical in neuroimaging datasets. With fMRI, acquisition artifacts can corrupt individual voxels or entire planes. In PET, poor patient positioning can result in some subjects missing some of their temporal or dorsal cortices. When some voxels are missing, the standard procedure is to mask out any voxel with any missing data, forgoing results for those voxels. Here we use results from the theory of missing data to make best use of all information collected. Specifically we describe the conditions that must hold such that an intuitive “complete case” analysis can be used, and demonstrate the method on a FDG-PET dataset. We further show that there are other problems when data are smoothed Our complete-case analysis method solves the missing data problem in neuroimaging under either MCAR or MAR conditions. The method is straightforward, though does require fitting different design matricies each voxel, discarding subjects with missing data. Voxels with partially complete data will have less precise parameter estimates, but the SDIF can be computed and used to gauge the severity of the problem. Standard smoothing creates data outside of the brain and outside of the mask of non-missing data. A truncated kernel smoother, followed by masking of missing voxels, avoids these problems. When combined with a complete case analysis, this approach provides optimally valid results.},
author = {Huang, Xiaobi and Nichols, Thomas E. and Kim, Boklye and Foster, Norman},
file = {:homes/davenpor/global/TomsMiniProject/Toms Files/MissingPaper/MissingPaper3/MissingPaper3.pdf:pdf},
