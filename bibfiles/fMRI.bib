pmid = {10466150},
title = {{Statistical limitations in functional neuroimaging II. Signal detection and statistical inference}},
url = {http://rstb.royalsocietypublishing.org/cgi/doi/10.1098/rstb.1999.0478},
volume = {354},
year = {1999}
