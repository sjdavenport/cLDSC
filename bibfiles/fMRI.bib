eprint = {135681},
file = {:homes/davenpor/global/TomsMiniProject/Toms{\_}Relevant{\_}Papers/fMRI/Resting State/Interpreting temporal ﬂuctuations in resting-state functionalconnectivity MRI.pdf:pdf},
