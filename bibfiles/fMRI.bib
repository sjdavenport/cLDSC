doi = {10.1016/j.neuroimage.2018.02.060},
file = {:homes/davenpor/global/TomsMiniProject/Toms{\_}Relevant{\_}Papers/fMRI/Multivariate Models/MIDAS.pdf:pdf},
issn = {10538119},
journal = {NeuroImage},
