file = {:homes/davenpor/global/TomsMiniProject/Toms{\_}Relevant{\_}Papers/Resampling/Permutation Test/Faster permutation inference in brain imaging.pdf:pdf},
isbn = {1097-0193 (Electronic) 1065-9471 (Linking)},
