file = {:data/fireback/davenpor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Petersson et al. - 1999 - Statistical limitations in functional neuroimaging II. Signal detection and statistical inference.pdf:pdf},
isbn = {0962-8436},
issn = {0962-8436},
