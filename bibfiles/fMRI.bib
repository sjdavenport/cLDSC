doi = {10.1097/00004647-199601000-00002},
file = {:data/fireback/davenpor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Holmes et al. - 1996 - Nonparametric Analysis of Statistic Images from Functional Mapping Experiments(2).pdf:pdf},
