doi = {10.1101/295048},
file = {:homes/davenpor/global/TomsMiniProject/Toms{\_}Relevant{\_}Papers/Voodoo Correlations/Commentaries/Effect Size and Power in fMRI Group Analysis.pdf:pdf},
journal = {bioRxiv},
pages = {295048},
title = {{Effect Size and Power in fMRI Group Analysis}},
url = {https://www.biorxiv.org/content/early/2018/04/06/295048},
year = {2018}
}
